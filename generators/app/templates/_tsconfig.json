{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "jsx": "react"
  },
  "filesGlob": [
    "./src/**/*.ts?(x)"
  ],
  "testsGlob": [
    "./test/**/*-spec.ts"
  ],
  "additional": [
    "src/**/*.js?(x)"
  ]
}
