{
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "jsx": "react",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    
    "listFiles": true,
    "listEmittedFiles": false
  },
  "buildOptions": {
    "files": [
      "./src/**/*.ts?(x)"
    ],
    "tests": [
      "./test/**/*-spec.ts"
    ],
    "include": [
      "./src/**/*.js?(x)"
    ],
    "strictLint": false
  }
}